{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 15,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "x64-debug",
      "displayName": "x64 Debug",
      "description": "Build for Windows x64 (64-bit) - Debug",
      "binaryDir": "${sourceDir}/cmake-build-x64-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_TOOLCHAIN_FILE": {
          "type": "FILEPATH",
          "value": "${sourceDir}/cmake/toolchain-x64.cmake"
        }
      }
    },
    {
      "name": "x64-release",
      "displayName": "x64 Release",
      "description": "Build for Windows x64 (64-bit) - Release",
      "binaryDir": "${sourceDir}/cmake-build-x64-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_TOOLCHAIN_FILE": {
          "type": "FILEPATH",
          "value": "${sourceDir}/cmake/toolchain-x64.cmake"
        }
      }
    },
    {
      "name": "x86-debug",
      "displayName": "x86 Debug",
      "description": "Build for Windows x86 (32-bit) - Debug",
      "binaryDir": "${sourceDir}/cmake-build-x86-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_TOOLCHAIN_FILE": {
          "type": "FILEPATH",
          "value": "${sourceDir}/cmake/toolchain-x86.cmake"
        }
      }
    },
    {
      "name": "x86-release",
      "displayName": "x86 Release",
      "description": "Build for Windows x86 (32-bit) - Release",
      "binaryDir": "${sourceDir}/cmake-build-x86-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_TOOLCHAIN_FILE": {
          "type": "FILEPATH",
          "value": "${sourceDir}/cmake/toolchain-x86.cmake"
        }
      }
    }
  ]
}
