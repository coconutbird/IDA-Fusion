{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 15,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "x64-debug",
      "displayName": "x64 Debug",
      "description": "Build for Windows x64 (64-bit) - Debug",
      "binaryDir": "${sourceDir}/build/x64-debug/_build",
      "architecture": {
        "value": "x64",
        "strategy": "set"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_RUNTIME_OUTPUT_DIRECTORY": "${sourceDir}/build/x64-debug",
        "CMAKE_LIBRARY_OUTPUT_DIRECTORY": "${sourceDir}/build/x64-debug",
        "CMAKE_ARCHIVE_OUTPUT_DIRECTORY": "${sourceDir}/build/x64-debug"
      }
    },
    {
      "name": "x64-release",
      "displayName": "x64 Release",
      "description": "Build for Windows x64 (64-bit) - Release",
      "binaryDir": "${sourceDir}/build/x64-release/_build",
      "architecture": {
        "value": "x64",
        "strategy": "set"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_RUNTIME_OUTPUT_DIRECTORY": "${sourceDir}/build/x64-release",
        "CMAKE_LIBRARY_OUTPUT_DIRECTORY": "${sourceDir}/build/x64-release",
        "CMAKE_ARCHIVE_OUTPUT_DIRECTORY": "${sourceDir}/build/x64-release"
      }
    },
    {
      "name": "x86-debug",
      "displayName": "x86 Debug",
      "description": "Build for Windows x86 (32-bit) - Debug",
      "binaryDir": "${sourceDir}/build/x86-debug/_build",
      "architecture": {
        "value": "Win32",
        "strategy": "set"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_RUNTIME_OUTPUT_DIRECTORY": "${sourceDir}/build/x86-debug",
        "CMAKE_LIBRARY_OUTPUT_DIRECTORY": "${sourceDir}/build/x86-debug",
        "CMAKE_ARCHIVE_OUTPUT_DIRECTORY": "${sourceDir}/build/x86-debug"
      }
    },
    {
      "name": "x86-release",
      "displayName": "x86 Release",
      "description": "Build for Windows x86 (32-bit) - Release",
      "binaryDir": "${sourceDir}/build/x86-release/_build",
      "architecture": {
        "value": "Win32",
        "strategy": "set"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_RUNTIME_OUTPUT_DIRECTORY": "${sourceDir}/build/x86-release",
        "CMAKE_LIBRARY_OUTPUT_DIRECTORY": "${sourceDir}/build/x86-release",
        "CMAKE_ARCHIVE_OUTPUT_DIRECTORY": "${sourceDir}/build/x86-release"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "x64-debug",
      "configurePreset": "x64-debug",
      "configuration": "Debug"
    },
    {
      "name": "x64-release",
      "configurePreset": "x64-release",
      "configuration": "Release"
    },
    {
      "name": "x86-debug",
      "configurePreset": "x86-debug",
      "configuration": "Debug"
    },
    {
      "name": "x86-release",
      "configurePreset": "x86-release",
      "configuration": "Release"
    }
  ]
}
